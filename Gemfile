source 'https://rubygems.org' 

ruby '2.1.0'
gem 'rails', '4.0.2'

 # Rails defaults
gem 'sqlite3'
gem 'sass-rails', '~> 4.0.0' 
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0' 
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

 # learn-rails
gem 'activerecord-tableless' # help to use rails without a database
gem 'figaro'                 # configuration framework
gem 'foundation-rails'       # front-end franework
gem 'gibbon'                 # access to the MailChimp API
gem 'google_drive'           # Google Drive Spreadsheets for data storage
gem 'high_voltage'           # For static pages like 'About Us'
gem 'simple_form'            # Forms made easy
group :development do  
  gem 'better_errors'        # Help when things go wrong
  gem 'quiet_assets'         # Suppresses distracting message in the log
  gem 'rails_layout'         # Generates files for application layout
end